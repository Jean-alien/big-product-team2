<h4><%= quizData.length %> Collections</h4>
<div class="categories">
  <div class="criteria">
    <span>Questions</span>
    <span>Answers</span>
  </div>
</div>

<% for (var i=0; i < quizData.length; i++) { %>
<!-- start of question cards-->
    <div class="container" id="flashcards">
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front">
        <form method="POST" action="/updateQuiz">
            <input type="hidden" name="id" value="<%= quizData[i]._id %>">
            <span class="quizcont"> <input type="text" class="quiz-block" name="name" value="<%= quizData[i].question %>"></span>
          </form>
           <!--  -->
           <div class="card-footer">
           <button type="submit" id="submit" class="button-update">Update</button>
        </div>
     
        <form method="POST" action="/deleteQuiz">
            <input type="hidden" name="id" value="<%= quizData[i]._id %>">
            <div class="card-footer">
            <button type="submit" id="delete" class="button-delete">Delete</button>
              </div>
          </form>
        </div>
            <div class="flip-card-back">

            <input type="text" name="room_type" value="<%= quizData[i].answer %>">
           
            <button type="submit" id="submit" class="button-update">Update</button>
        </form>
     
        <form method="POST" action="/deleteQuiz">
            <input type="hidden" name="id" value="<%= quizData[i]._id %>">
            <button type="submit" class="align-self-end btn btn-block btn-primary" style="margin-top: auto;" id="button-delete">Delete</button>
        </form>
        
    </div>
        </div>
    </div>
    <!-- end -->

<% } %>

